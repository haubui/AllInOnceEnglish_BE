{
  "name": "all_in_one_english",
  "version": "1.0.0",
  "description": "This NodeJs server help to provide APIs functionalities for Mobile app about English Grammars, Practices, Exercises and Tests",
  "main": "main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haubui/AllInOnceEnglish_BE.git"
  },
  "keywords": [
    "english",
    "all",
    "in",
    "once",
    "english",
    "english",
    "grammar",
    "english",
    "practices",
    "english",
    "exercies",
    "toefl",
    "tests",
    "ielts",
    "tests",
    "ielts",
    "exercises",
    "pronunciation",
    "common",
    "english"
  ],
  "author": "glp.buivanhau08t2@gmail.com",
  "private": true,
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haubui/AllInOnceEnglish_BE/issues"
  },
  "homepage": "https://github.com/haubui/AllInOnceEnglish_BE#readme",
  "scripts": {
    "postinstall": "ts-node .resources/init-project.ts",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage --runInBand",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
    "test:unit": "NODE_ENV=test jest '.*\\.spec\\.ts$'",
    "test:e2e": "NODE_ENV=test jest '.*\\.e2e-spec\\.ts$' --runInBand"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.2.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-express": "^10.3.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.3.2",
    "cheerio": "^1.0.0-rc.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "mongoose": "^8.0.4",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.4",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(spec|e2e-spec)\\.ts$",
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
